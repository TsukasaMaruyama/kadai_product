<div class="clear" style="padding: 100px">
  <div class="leftContainer">
    <div class="userInfo__container">
      <div class="userInfo">
        <div class="userInfo__img--notFound ">
          <i class="fas fa-user-alt"></i>
        </div>
        <p class="userInfo__name"><%= @current_user.name %></p>
      </div>
    </div>
    <div class="mybtnDefalut createBtn" onclick="location.href='/themes/new'">新しいテーマを作る</div>
  </div>

  <div class="themeCardContainer">
    <% @create_themes.each do |theme| %>
      <div class="themeCard">
        <img class="themeCard__image" src="https://pbs.twimg.com/profile_images/581025665727655936/9CnwZZ6j.jpg">
        <p class="themeCard__desc"><%= theme.title %></p>
        <p class="themeCard__info">
          <%= theme.creator.name %><br>
          <%= theme.created_at.strftime("%Y/%m/%d") %>
        </p>
        <p class="themeCard__count"><%= theme.count %></p>
        <input type="button" class="themeCard__btn js-countBtn" value="+" data-id="<%= theme.id %>">
      </div>
    <% end %>
  </div>
</div>

<script>
  $('.js-countBtn').on('click', function () {
      var count = countUp($(this).data('id'));
      $(this).closest('.themeCard').find('.themeCard__count').text(count);
  });
</script>

<style>
  .themeCardContainer {
    display: flex;
    justify-content: space-between;
    flex-wrap: wrap;
    width: 620px;
    float: right;
  }

  .userInfo {
    margin-top: 60px;
    width: 200px;
    display: inline-block;
    text-align: center;
  }

  .userInfo__container {
    display: inline-block;
    width: 100%;
    height: 400px;
    box-shadow: 2px 2px 2px 2px rgba(0,0,0,0.3);
    text-align: center;
  }
  .userInfo__img--notFound {
    background-color: #DdFFFc;
    border-radius: 200px;
    width: 200px;
    height: 200px;
  }

  .userInfo__name {
    color: #579FE4;
    margin-top: 20px;
    height: 50px;
    width: 100%;
    text-align: center;
    font-size: 20px;
  }
  .userInfo__img--notFound i{
    font-size: 100px;
    color: #579FE4;
    margin-top: 50px;
  }

  .leftContainer {
    display: inline-block;
    width: calc(100% - 620px - 50px);
  }

  .mybtnDefalut {
    color: white;
    width: 100%;
    background-color: #579FE4;
    border-radius: 5px;
    padding: 15px;
    text-decoration: none;
  }
  .createBtn {
    text-align: center;
    margin-top: 50px;
  }

</style>
