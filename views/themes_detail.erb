<img class="themeDetailBackImg" src="https://pbs.twimg.com/profile_images/581025665727655936/9CnwZZ6j.jpg">
<div class="themeDetailWrap">
  <a class="back" href="/"> back </a>
  <div class="themeCardContainer">
    <div style="width: 100%">
      <p class="themeDetailTitle">
        <span class="yajirushi"><i class="fas fa-arrow-left"></i></span>　<%= @theme.title %>　<span class="yajirushi"><i class="fas fa-arrow-right"></i></span>
      </p>
      <p class="themeDetailDate">from <%= @theme.created_at.strftime("%Y/%m/%d")  %></p>
      <p class="themeDetailCount"><%= @theme.count %></p>
      <button class="themeDetailBtn">+</button>
    </div>
  </div>
  <div class="counter">
    <p style="font-size: 25px">Counter</p>
    <div class="user">
      <div class="user__icon">
        <i class="fas fa-user-alt"></i>
      </div>
      <p class="user__name">
        <%= @theme.creator.name %>
      </p>
    </div>
  </div>
  <% unless @theme.users.nil? %>
  <div class="cooCounter">
    <p style="font-size: 25px">Co-Counters</p>
    <div class="flex">
    <% @theme.users.each do |user| %>
      <% if user.id != @theme.creator.id %>
    <div class="user">
      <div class="user__icon">
        <i class="fas fa-user-alt"></i>
      </div>
      <p class="user__name">
        <%= user.name %>
      </p>
    </div>
        <% end %>
    <% end %>
  </div>
  </div>
  <% end %>
</div>
<script>
  $('.themeDetailBtn').on('click', function() {
          var res = countUp(<%= @theme.id %>);
          $('.themeDetailCount').text(res);
          console.log(res);
      }
  );
</script>

